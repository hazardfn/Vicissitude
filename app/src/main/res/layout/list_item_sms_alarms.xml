<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="?android:listPreferredItemHeight">


    <Switch
        android:id="@+id/alarmActivated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/abc_control_inset_material" />

    <TextView
        android:id="@+id/alarmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/alarmActivated"
        android:layout_toStartOf="@+id/alarmActivated"
        android:padding="@dimen/abc_control_padding_material"
        android:textSize="@dimen/abc_text_size_title_material" />

    <TextView
        android:id="@+id/alarmSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alarmActivated"
        android:layout_toLeftOf="@+id/alarmActivated"
        android:layout_toStartOf="@+id/alarmActivated"
        android:maxLines="3"
        android:padding="@dimen/abc_control_inset_material"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>